<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Chat en Tiempo Real</title>
    <style>
      body { font-family: Arial, sans-serif; } form { display: flex; margin-top:
      20px; } input { flex: 1; } ul { list-style: none; padding: 0; } li {
      margin-bottom: 10px; }

    </style>
  </head>
  <body>
    <h1>Bienvenido, {{username}}!</h1>
    <ul id="messages"></ul>
    <form id="form" action="">
      <input id="m" autocomplete="off" /><button>Enviar</button>
    </form>

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
      $(function () { var socket = io(); $('form').submit(function(){
      socket.emit('chat message', $('#m').val()); $('#m').val(''); return false;
      }); socket.on('chat message', function(data){
      $('#messages').append($('<li>').text(data.username + ': ' +
      data.message)); }); });
    </script>
  </body>
</html>